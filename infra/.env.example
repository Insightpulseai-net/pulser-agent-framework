# =============================================================================
# Environment Configuration
# InsightPulseAI Concur Suite
# =============================================================================
#
# Copy this file to .env and update values for your environment.
# NEVER commit .env to version control!
#

# -----------------------------------------------------------------------------
# Project
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=insightpulseai

# -----------------------------------------------------------------------------
# Domain & SSL
# -----------------------------------------------------------------------------
DOMAIN=insightpulseai.net
ODOO_DOMAIN=erp.insightpulseai.net
ACME_EMAIL=admin@insightpulseai.net

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=odoo
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# MinIO
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# -----------------------------------------------------------------------------
# Odoo
# -----------------------------------------------------------------------------
ODOO_DB=odoo
ODOO_ADMIN_PASSWORD=CHANGE_ME_ODOO_ADMIN
ODOO_PORT=8069
ODOO_LONGPOLLING_PORT=8072

# Performance (adjust for your server)
ODOO_WORKERS=2
ODOO_LIMIT_TIME_CPU=600
ODOO_LIMIT_TIME_REAL=1200
ODOO_LIMIT_MEMORY_HARD=2684354560
ODOO_LIMIT_MEMORY_SOFT=2147483648

# -----------------------------------------------------------------------------
# Traefik
# -----------------------------------------------------------------------------
# Generate with: htpasswd -nb admin yourpassword
TRAEFIK_AUTH=admin:$$apr1$$...

# -----------------------------------------------------------------------------
# Backup
# -----------------------------------------------------------------------------
BACKUP_DIR=/var/backups/odoo
BACKUP_RETENTION_DAYS=30

# DigitalOcean Spaces (optional)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_BUCKET=
DO_SPACES_REGION=sgp1

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
# Sentry DSN (optional)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_OCR=false
ENABLE_AI_AGENTS=false
