# LiteLLM Gateway Environment Variables
# Copy to .env and replace with actual values

# API Keys (required)
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AIza...

# LiteLLM Master Key (required)
LITELLM_MASTER_KEY=sk-... # Generate: openssl rand -hex 32

# Database (optional - for request logging)
LITELLM_DATABASE_URL=postgresql://user:password@host:5432/litellm

# Langfuse (required for observability)
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://langfuse.insightpulseai.net

# Redis (optional - for caching)
REDIS_HOST=redis-service.litellm.svc.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=

# Slack/Mattermost (optional - for alerts)
SLACK_WEBHOOK_URL=https://mattermost.insightpulseai.net/hooks/...

# General Settings
LITELLM_LOG=INFO
LITELLM_DEBUG=false
