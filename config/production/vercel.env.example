# Vercel Production Environment Variables
# Add these to Vercel dashboard: https://vercel.com/[team]/[project]/settings/environment-variables
# NEVER commit actual credentials to git

# Supabase Integration
NEXT_PUBLIC_SUPABASE_URL=https://xkxyvboeubffxxbebsll.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Server-side only (not exposed to browser)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# OCR Backend
NEXT_PUBLIC_OCR_ENDPOINT=https://ade-ocr-backend.insightpulseai.net

# n8n Integration
N8N_BASE_URL=https://ipa.insightpulseai.net
N8N_API_KEY=n8n_api_...

# Feature Flags (Phase 1)
NEXT_PUBLIC_ENABLE_TASK_QUEUE_DASHBOARD=true
NEXT_PUBLIC_ENABLE_BIR_STATUS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_OCR_CONFIDENCE_DASHBOARD=true

# Feature Flags (Phase 1.5 - DISABLED)
NEXT_PUBLIC_ENABLE_SRM_SUPPLIERS=false
NEXT_PUBLIC_ENABLE_SRM_RATE_CARDS=false

# Analytics & Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=true
VERCEL_ANALYTICS_ID=your_analytics_id_here

# Performance Monitoring
NEXT_PUBLIC_ENABLE_WEB_VITALS=true

# Error Tracking (optional - Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=your_sentry_token_here

# Build Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=60000

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400

# Mattermost Webhooks (for notifications)
MATTERMOST_WEBHOOK_URL=https://mattermost.insightpulseai.net/hooks/...

# Visual Parity Thresholds
VISUAL_PARITY_MOBILE_THRESHOLD=0.97
VISUAL_PARITY_DESKTOP_THRESHOLD=0.98

# Deployment Notifications
ENABLE_DEPLOYMENT_NOTIFICATIONS=true
DEPLOYMENT_NOTIFICATION_CHANNEL=#finance-alerts
